---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
    canonicalUrl?: string;
    ogUrl?: string;
    ogImage?: string;
    ogType?: string;
}

const { 
    title, 
    description, 
    canonicalUrl, 
    ogUrl, 
    ogImage = "https://corduroy.co.jp/assets/images/ogp.png",
    ogType = "website"
} = Astro.props;

const siteBase = Astro.site?.href ?? "https://corduroy.co.jp";
const rawPath = Astro.url?.pathname ?? "/";
const normalizedPath = rawPath
  .replace(/\/index\.html$/i, "/")
  .replace(/\.html$/i, "");
const pageUrl = new URL(normalizedPath, siteBase).href;
const resolvedCanonicalUrl = canonicalUrl ?? pageUrl;
const resolvedOgUrl = ogUrl ?? pageUrl;
---

<!doctype html>
<html lang="ja">
	<head>
		<!-- Google tag (gtag.js) -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-GTLHM3EM7C"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'G-GTLHM3EM7C');
        </script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/assets/images/faviconC.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description || "紹介限定・長期前提で伴走するAIパートナー。AI勉強会・顧問・システム開発で、想いに寄り添いながら小さく試して広げます。"} />
		<link rel="canonical" href={resolvedCanonicalUrl} />
        
        <meta property="og:type" content={ogType}>
        <meta property="og:url" content={resolvedOgUrl}>
        <meta property="og:title" content={title}>
        <meta property="og:description" content={description || "紹介限定・長期前提で伴走するAIパートナー。AI勉強会・顧問・システム開発で、想いに寄り添いながら小さく試して広げます。"}>
        <meta property="og:image" content={ogImage}>
        <meta property="og:locale" content="ja_JP">
        <meta property="og:site_name" content="株式会社コールテン">

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:url" content={resolvedOgUrl}>
        <meta name="twitter:title" content={title}>
        <meta name="twitter:description" content={description || "紹介限定・長期前提で伴走するAIパートナー。AI勉強会・顧問・システム開発で、想いに寄り添いながら小さく試して広げます。"}>
        <meta name="twitter:image" content={ogImage}>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
        
        <slot name="head" />
	</head>
	<body>
        <Header />
		<slot />
        <Footer />
        <script>
            // --- Scroll Fade-in Animation ---
            const observer = new IntersectionObserver((entries) => {
              entries.forEach(entry => {
                if (entry.isIntersecting) {
                  entry.target.classList.remove('pending');
                  observer.unobserve(entry.target);
                }
              });
            }, { 
                threshold: 0.1,
                rootMargin: '0px'
            });
            document.querySelectorAll('.fade-up').forEach(el => {
              el.classList.add('pending');
              observer.observe(el);
              // Fallback to ensure visibility
              setTimeout(() => {
                  if (el.classList.contains('pending')) {
                      el.classList.remove('pending');
                  }
              }, 3000);
            });

            // --- GA CTA Tracking ---
            document.addEventListener('click', (event) => {
              const target = event.target.closest('[data-ga-event]');
              if (!target || typeof gtag !== 'function') return;
              const eventName = target.getAttribute('data-ga-event');
              if (!eventName) return;
              gtag('event', eventName, {
                event_label: target.getAttribute('data-ga-label') || undefined,
                event_category: target.getAttribute('data-ga-category') || undefined,
              });
            });
        </script>
	</body>
</html>
<style is:global>
    @font-face {
      font-family: 'CraftMincho';
      src: url('/assets/fonts/craftmincho.otf') format('opentype');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    :root {
      /* Core Palette - Deep & Rich */
      --green: #0b3326;
      --mint: #eef7f3;
      --mint-dark: #c8e1d6;
      --cream: #fbf9f5;
      --white: #ffffff;

      /* Accents */
      --accent: #d4a04d;
      --orange: #f2bd78;

      /* Text */
      --text: #1a2e28;
      --text-light: #486358;
      --ink: #052018;

      /* UI Elements */
      --line: #dbebe3;
      --line-strong: #bfd6cc;
      --sea: #16614e;

      /* Effects */
      --shadow-sm: 0 2px 4px rgba(5, 32, 24, 0.04), 0 1px 2px rgba(5, 32, 24, 0.02);
      --shadow-md: 0 8px 16px rgba(5, 32, 24, 0.06), 0 4px 8px rgba(5, 32, 24, 0.03);
      --shadow-lg: 0 24px 48px rgba(5, 32, 24, 0.08), 0 12px 24px rgba(5, 32, 24, 0.04);
      --glass: rgba(255, 255, 255, 0.8);
      --glass-border: rgba(255, 255, 255, 0.4);
    }

    html {
      scroll-behavior: smooth
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box
    }

    body {
      margin: 0;
      font-family: "Noto Sans JP", "Space Grotesk", "Helvetica Neue", Arial, sans-serif;
      color: var(--text);
      background: var(--cream);
    }
    
    /* Global Typography */
    h1, h2, h3, h4 {
        margin: 0;
        color: var(--ink);
        font-family: 'CraftMincho', serif;
        font-feature-settings: "palt";
        letter-spacing: 0.05em;
    }
    
    h1 {
      font-size: clamp(40px, 6vw, 64px);
      line-height: 1.15;
    }

    h2 {
      font-size: clamp(28px, 4vw, 42px);
      line-height: 1.3;
      margin-bottom: 16px;
    }

    h3 {
      font-size: 20px;
      line-height: 1.5;
      font-weight: 600;
    }

    p {
      line-height: 1.8;
      letter-spacing: 0.02em;
      color: var(--text-light);
    }
    
    a {
      text-decoration: none;
      color: inherit;
      transition: color 0.2s ease;
    }

    img {
      max-width: 100%;
      display: block;
    }
    
    /* Section & Head */
    section {
      padding: 100px 0;
      position: relative;
    }

    .section-head {
      text-align: center;
      margin-bottom: 72px;
      position: relative;
    }

    .section-head small {
      display: inline-block;
      color: var(--accent);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      margin-bottom: 16px;
      font-family: "Space Grotesk", sans-serif;
      font-size: 12px;
    }

    .section-head p {
      max-width: 600px;
      margin: 0 auto;
      color: var(--text-light);
    }
    
    .container {
      max-width: 1240px;
      margin: 0 auto;
      padding: 0 32px;
    }
    
    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 16px 36px;
      border-radius: 100px;
      border: none;
      background: var(--sea);
      color: #fff;
      font-weight: 700;
      font-size: 15px;
      box-shadow: 0 4px 12px rgba(22, 97, 78, 0.25);
      letter-spacing: 0.05em;
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(22, 97, 78, 0.35);
      background: #0f4d3d;
      filter: none;
    }

    .btn.secondary {
      background: transparent;
      border: 1px solid var(--text-light);
      color: var(--text);
      box-shadow: none;
    }

    .btn.secondary:hover {
      border-color: var(--sea);
      color: var(--sea);
      background: rgba(22, 97, 78, 0.03);
      box-shadow: none;
    }
    
    /* Card */
    .card {
        background: #fff;
        border: 1px solid #eef2f0;
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, .02), 0 20px 45px rgba(0, 0, 0, .06);
        transition: .25s transform, .25s box-shadow;
    }
    
    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, .02), 0 28px 60px rgba(0, 0, 0, .09);
    }
    
    /* Mini text utility */
    .mini {
        font-size: 14px;
        color: var(--text-light);
        line-height: 1.8;
    }
    
    .card .mini {
        color: #486358;
    }
    
    /* Background Utilities */
    .bg-gradient-soft {
        background: linear-gradient(180deg, #fbfaf8 0%, #f5f9f7 100%);
    }
    
    .bg-contact {
        background: linear-gradient(180deg, #f5f9f7 0%, #e6f3ed 100%);
    }
    
    /* Values Section - Promise Numbers */
    #values .promise-number {
      font-size: 4rem;
      font-weight: 700;
      color: var(--mint);
      line-height: 1;
      margin-bottom: 0.2em;
      font-family: 'CraftMincho', serif;
    }
    
    /* Split Layout */
    .split-layout {
      display: grid;
      gap: 32px;
      align-items: center;
      margin-top: 28px;
    }

    @media(min-width:880px) {
      .split-layout {
        grid-template-columns: 1fr 1fr;
        gap: 48px;
      }
      
      .split-layout.reverse>*:first-child {
        grid-column-start: 2;
      }

      .split-layout.reverse>*:last-child {
        grid-column-start: 1;
        grid-row-start: 1;
      }
    }

    .split-layout .img-container {
      border-radius: 24px;
      overflow: hidden;
      box-shadow: var(--shadow-md);
      position: relative;
    }

    .split-layout .img-container img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: .3s transform;
    }

    .split-layout .img-container:hover img {
      transform: scale(1.03);
    }
    
    /* Brand Story */
    #brand-story .story-container {
      max-width: 680px;
      margin: 0 auto;
    }

    #brand-story .story-text-blocks {
      display: flex;
      flex-direction: column;
      gap: 1.5em;
      text-align: left;
      background-color: var(--cream);
      border: 1px solid var(--line);
      border-radius: 12px;
      padding: 32px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, .05);
      line-height: 1.8;
    }

    #brand-story .story-lead {
      font-size: 22px;
      font-weight: 700;
      color: var(--ink);
      margin-bottom: 16px;
      text-align: center;
    }
    
    /* Fade Up Animation */
    /* Fade Up Animation */
    .fade-up {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    .fade-up.pending {
        opacity: 0;
        transform: translateY(30px);
    }
    
    /* ============================================
       MOBILE RESPONSIVE STYLES
       ============================================ */
    
    @media (max-width: 768px) {
      h1 {
        font-size: 34px;
      }

      h2 {
        font-size: 28px;
      }

      section {
        padding: 60px 16px;
      }

      /* Mobile header layout - center logo */
      .nav {
        justify-content: center;
        position: relative;
      }

      /* Fix VISION section card grid on mobile */
      #vision .card[style*="grid-template-columns"] {
        grid-template-columns: 1fr !important;
        gap: 16px !important;
      }

      #vision .card[style*="grid-template-columns"]>div:first-child {
        width: 100px !important;
        height: 100px !important;
        margin: 0 auto;
      }

      /* Fix VISION section image on mobile - prevent cutoff and black corners */
      #vision .img-container {
        min-height: 300px !important;
        position: relative !important;
      }

      #vision .img-container img {
        position: absolute !important;
        top: 0;
        left: 0;
        width: 100% !important;
        height: 100% !important;
        object-fit: cover;
      }
    }
</style>
